
<% @posts.each do |post| %>
  <h2><%= post.title %></h2>
  <h6>by: <%= post.author %>
  <%= simple_format post.body %>
  <h4>Comments (<%= post.comments.count %>)</h4>
  <% post.comments.each do |comment| %>
    <blockquote>
      <em><%= comment.author %> says:</em>
      <%= comment.content %>
    </blockquote>
  <% end %>

<% end %>
